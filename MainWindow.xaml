<Window x:Class="Choinka.MainWindow" x:Name="okno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Choinka"
        mc:Ignorable="d"
        Title="Choinka" Height="400" Width="350"
        WindowStyle="None" ShowInTaskbar="False"
        Opacity="0.75" Background="{x:Null}" AllowsTransparency="True" 
        MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" MouseUp="Window_MouseUp" 
        PreviewKeyDown="Window_PreviewKeyDown" Closing="okno_Closing">
    <Window.Resources>
        <Storyboard x:Key="scenorysZnikaniaOkna" Completed="Storyboard_Completed">
            <DoubleAnimation Storyboard.TargetName="okno"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:1" To="0.0"
                             RepeatBehavior="1x" AutoReverse="False"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.Effect>
            <DropShadowEffect Color="Gold" BlurRadius="25" ShadowDepth="0" Opacity="0.9"/>
        </Grid.Effect>

        <Grid.Background>
            <ImageBrush ImageSource="/Resources/choinki/choinka.png" Stretch="Uniform"
                        AlignmentX="Center" AlignmentY="Center"/>
        </Grid.Background>

        <Canvas x:Name="LightsCanvas" IsHitTestVisible="False">
            <Canvas.Resources>
                <Style TargetType="Ellipse">
                    <Setter Property="Width" Value="10"/>
                    <Setter Property="Height" Value="10"/>
                    <Setter Property="Opacity" Value="0.4"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Canvas.Resources>

            <Ellipse Fill="Cyan" Canvas.Left="195" Canvas.Top="100" />
            <Ellipse Fill="Cyan" Canvas.Left="260" Canvas.Top="300" />
            <Ellipse Fill="Cyan" Canvas.Left="135" Canvas.Top="245" />
            <Ellipse Fill="Cyan" Canvas.Left="208" Canvas.Top="215" />
            <Ellipse Fill="Gold" Canvas.Left="120" Canvas.Top="140" />
            <Ellipse Fill="Gold" Canvas.Left="208" Canvas.Top="168" />
            <Ellipse Fill="Gold" Canvas.Left="100" Canvas.Top="210" />
            <Ellipse Fill="Gold" Canvas.Left="152" Canvas.Top="270" />
            <Ellipse Fill="LightGreen" Canvas.Left="153" Canvas.Top="80" />
            <Ellipse Fill="LightGreen" Canvas.Left="172" Canvas.Top="158" />
            <Ellipse Fill="LightGreen" Canvas.Left="172" Canvas.Top="218" />
            <Ellipse Fill="LightGreen" Canvas.Left="210" Canvas.Top="260" />
            <Ellipse Fill="OrangeRed" Canvas.Left="118" Canvas.Top="160" />
            <Ellipse Fill="OrangeRed" Canvas.Left="80" Canvas.Top="260" />
            <Ellipse Fill="OrangeRed" Canvas.Left="210" Canvas.Top="303" />
        </Canvas>

        <Canvas x:Name="SparkCanvas" IsHitTestVisible="False"/>

        <Canvas x:Name="SnowCanvas" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Canvas x:Name="StarCanvas" IsHitTestVisible="True">

            <Ellipse x:Name="StarGlow" Width="50" Height="50" 
                     Canvas.Left="157" Canvas.Top="5" Opacity="0" IsHitTestVisible="False">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFFFD700" Offset="0.2" />
                        <GradientStop Color="#00FFF7A0" Offset="1.0" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Rectangle x:Name="StarHotspot" Width="50" Height="50" 
                       Canvas.Left="157" Canvas.Top="5" Fill="Transparent"
                       MouseEnter="StarHotspot_MouseEnter"
                       MouseLeave="StarHotspot_MouseLeave" />
        </Canvas>

        <StackPanel VerticalAlignment="Bottom" Margin="10" x:Name="CountDownPanel"
                    Background="#66000000" Orientation="Vertical" Visibility="Visible">
            <TextBlock x:Name="CountDownText"
                       Text="Do Świąt zostało:  " Foreground="White" FontWeight="ExtraBold"
                       FontSize="14" TextAlignment="Center" Margin="5, 3, 3, 0" />
            <TextBlock Text="Wesołych Świąt!" Foreground="Gold" FontWeight="Bold"
                       FontSize="16" TextAlignment="Center" Margin="5,0,5,5" />
        </StackPanel>

    </Grid>
</Window>
